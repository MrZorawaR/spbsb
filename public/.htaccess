# ===================================================
# SPBSB Institute - Apache Configuration
# ===================================================

RewriteEngine On

# ---------------------------------------------------
# FORCE HTTPS (enable in production)
# ---------------------------------------------------
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ---------------------------------------------------
# REAL 404 FOR NON-EXISTENT PAGES (CRITICAL FIX)
# ---------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php !-f
RewriteRule ^ - [R=404,L]

# ---------------------------------------------------
# REMOVE .php EXTENSION FROM URLs
# ---------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# ---------------------------------------------------
# HANDLE TRAILING SLASH FOR DIRECTORIES
# ---------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ $1/ [L,R=301]

# ---------------------------------------------------
# DIRECTORY INDEX
# ---------------------------------------------------
DirectoryIndex index.php index.html

# ===================================================
# ERROR PAGES
# ===================================================
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# ===================================================
# CACHING - PERFORMANCE OPTIMIZATION
# ===================================================
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"

    # CSS & JS
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ===================================================
# COMPRESSION
# ===================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json application/xml image/svg+xml font/woff font/woff2
</IfModule>

# ===================================================
# SECURITY HEADERS
# ===================================================
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header unset X-Powered-By
</IfModule>

# ===================================================
# BLOCK SENSITIVE FILES & FOLDERS
# ===================================================
<FilesMatch "(^\.htaccess|\.git|\.env|composer\.(json|lock)|package(-lock)?\.json|tailwind\.config\.js)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

RewriteRule ^(app|src|node_modules)/ - [F,L]
